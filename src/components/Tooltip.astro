---
export interface Props {
    tooltipMsg: string;
    className?: string;
    childClassName?: string;
}

const { tooltipMsg, className, childClassName } = Astro.props;
---

<div class={className}>
    <div class="tooltip relative inline-block w-full h-full">
        <div class={childClassName}>
            <slot />
        </div>
        <span class="tooltiptext">{tooltipMsg}</span>
    </div>
</div>

<style>
    /* Tooltip text */
    .tooltip .tooltiptext {
        visibility: hidden;
        background-color: black;
        color: #fff;
        text-align: center;
        padding: 0.5rem 0.5rem;
        border-radius: 6px;

        /* Position the tooltip text - see examples below! */
        position: absolute;
        z-index: 1;
    }

    /* Show the tooltip text when you mouse over the tooltip container */
    .tooltip:hover .tooltiptext {
        visibility: visible;
    }
</style>
