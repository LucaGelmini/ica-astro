---
import ArrowDown from "../../icons/ArrowDown.astro";
import ArrowUp from "../../icons/ArrowUp.astro";

export interface Props {
    data: {
        amount: number;
        variation?: number;
    };
    className: string;
}

const {
    data: { amount, variation },
    className,
} = Astro.props;
---

<div
    class:list={[
        "flex items-center justify-center w-full h-min my-1 max-h-32 md:w-1/4 md:h-full rounded-md shadow-md px-4 pt-2 pb-4",
        className,
    ]}
>
    <div class="my-auto grid grid-cols-3 grid-rows-1 w-full md:flex flex-col">
        <h4 class="my-auto font-semibold text-center col-span-1 h-min">
            <slot />
        </h4>
        <div class="font-semibold col-span-1 align-middle">
            <p class="text-lg text-center">{amount.toLocaleString("es-AR")}</p>
            <p class="text-sm text-center">millones de dólares</p>
        </div>
        {
            variation && (
                <div class="px-2 col-span-1 align-middle">
                    <p class="block text-center text-sm md:hidden">Variación</p>
                    <div class="px-2 flex justify-center items-center">
                        <span>
                            {variation < 0 ? (
                                <ArrowDown className={"h-6"} />
                            ) : (
                                <ArrowUp className={"h-6"} />
                            )}
                        </span>
                        <p>{(variation * 100).toLocaleString("es-AR")}%</p>
                    </div>
                </div>
            )
        }
    </div>
</div>
