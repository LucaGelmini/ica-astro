---
import Grafico from "../Grafico";
import dataSunburstPpalMensual from "../../data/plots/sunburst_rubros_usos_mensual.json";
---

<div class="w-full h-1/6 flex flex-col items-center">
    <div>
        <Grafico
            plotData={dataSunburstPpalMensual}
            divClassName={"w-full h-[300px]"}
            client:only
        />
    </div>
    <div class="w-2/3 flex">
        <div class="h-[10px] w-2/3 bg-orange-500"></div>
        <div class="h-[10px] w-1/3 bg-violet-500"></div>
    </div>
    <div
        class="w-full flex flex-col justify-around items-center my-5 md:flex-row"
    >
        <div class="w-1/4 rounded-md bg-orange-500 shadow-sm">Expo</div>
        <div class="w-1/4 rounded-md bg-indigo-500 shadow-sm">Saldo</div>
        <div class="w-1/4 rounded-md bg-violet-500 shadow-sm">Impo</div>
    </div>
</div>
