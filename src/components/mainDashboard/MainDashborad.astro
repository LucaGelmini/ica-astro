---
import Grafico from "../Grafico";
import dataSunburstPpalMensual from "../../data/plots/sunburst_rubros_usos_mensual.json";
import colors from "../../../colorScheme.json";
import IndicadorMainDashboard from "./IndicadorMainDashboard.astro";
import ArrowDown from "../../svg/ArrowDown.astro";
const dummyBoxesData = {
    x: { amount: 7089, variation: 14.5 },
    m: { amount: 5750, variation: -0.3 },
};
---

<div class="w-full h-[70vh] grid grid-rows-4">
    <div class="row-span-4">
        <Grafico
            plotData={dataSunburstPpalMensual}
            divClassName={"w-full h-[90%]"}
            client:only
        />
        <div class="w-2/3 mx-auto flex">
            <div class:list={["h-[10px] w-2/3", colors.expo]}></div>
            <div class:list={["h-[10px] w-1/3 bg-violet-500", colors.impo]}>
            </div>
        </div>
    </div>
    <div
        class="w-full flex flex-col justify-around items-center md:flex-row md:items-stretch"
    >
        <IndicadorMainDashboard
            data={dummyBoxesData.x}
            className={["w-1/4 h-full rounded-md shadow-sm", colors.expo]}
        >
            Expo
        </IndicadorMainDashboard>
        <IndicadorMainDashboard
            data={{ amount: dummyBoxesData.x.amount - dummyBoxesData.m.amount }}
            className={["w-1/4 h-full rounded-md shadow-sm", colors.balance]}
            >Saldo</IndicadorMainDashboard
        >

        <IndicadorMainDashboard
            data={dummyBoxesData.m}
            className={["w-1/4 h-full rounded-md shadow-sm", colors.impo]}
        >
            Impo
        </IndicadorMainDashboard>
    </div>
</div>
