---
export interface Props {
    defaultTab?: boolean;
    contentRef: string;
}
const { defaultTab = false, contentRef } = Astro.props;
---

<li
    id={defaultTab ? "default-tab-container" : null}
    class="font-semibold rounded-t -mb-px cursor-pointer h-fit w-fit flex flex-wrap hover:bg-slate-200"
>
    <a id={defaultTab ? "default-tab" : null} href={`#${contentRef}`} class="py-2 px-5 ">
        <slot />
    </a>
</li>
